<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.canteen.Stationary1">

    <LinearLayout
        android:orientation="vertical"

        android:paddingBottom="0dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingLeft="17dp"
        android:layout_width="match_parent"

        android:layout_height="match_parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="no. of bundle  papers"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="3mm"
            android:layout_marginBottom="1dp"
            android:textAllCaps="true"
            android:id="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="(per bundle Rs.190)"

            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="14dp"
            android:textAllCaps="true"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="34dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="48dp"
                android:background="#82b1ff"
                android:layout_height="48dp"
                android:onClick="decrement"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="-"

                />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textSize="3mm"
                android:textColor="@android:color/black"
                />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#82b1ff"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:onClick="increment"
                android:text="+" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="no. of hard-bound cover "
            android:textSize="3mm"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteY="119dp"
            tools:layout_editor_absoluteX="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="(per hardbound cover Rs.5)"

            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="14dp"
            android:textAllCaps="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="34dp">



            <Button
                android:id="@+id/button"
                android:layout_width="48dp"
                android:background="#82b1ff"
                android:layout_height="48dp"
                android:onClick="decrement1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="161dp"
                android:text="-" />

            <TextView
                android:id="@+id/quanti_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textSize="3mm"
                android:textColor="@android:color/black"

                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="172dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="48dp"
                android:background="#82b1ff"
                android:layout_height="48dp"
                android:onClick="increment1"
                android:textSize="30sp"
                android:textColor="#ffffff"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="161dp"
                android:text="+" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="no. of index/graph sheets"
            android:textSize="3mm"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteY="119dp"
            tools:layout_editor_absoluteX="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="(per sheet Rs.1)"

            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="14dp"
            android:textAllCaps="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="34dp">



            <Button
                android:id="@+id/button3"
                android:layout_width="48dp"
                android:background="#82b1ff"
                android:layout_height="48dp"
                android:onClick="decrement2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="161dp"
                android:text="-" />

            <TextView
                android:id="@+id/quant_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="3mm"

                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="172dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="48dp"
                android:background="#82b1ff"
                android:layout_height="48dp"
                android:onClick="increment2"
                android:textSize="30sp"
                android:textColor="#ffffff"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="161dp"
                android:text="+" />
        </LinearLayout>


        <TextView
            android:id="@+id/order1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textAllCaps="true"
            android:textColor="#880e4f"
            android:textSize="3mm"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="237dp" />

        <TextView
            android:id="@+id/order2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textAllCaps="true"
            android:textColor="#880e4f"
            android:textSize="3mm"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="237dp" />

        <TextView
            android:id="@+id/order3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:text="-"
            android:textAllCaps="true"
            android:textColor="#880e4f"
            android:textSize="3mm"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="237dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="bill"
            android:textSize="3mm"
            android:textStyle="bold"
            android:textColor="#880e4f"
            android:layout_marginBottom="8dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteY="237dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/bill_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:text="Rs.2"
            android:textSize="3mm"
            android:textStyle="bold"
            android:textColor="#880e4f"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitOrder"
            android:background="#4db6ac"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="3mm"
            android:text="submit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="proceed2"
            android:background="#4db6ac"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="3mm"
            android:text="proceed"/>

    </LinearLayout>

</ScrollView>
