<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="0dp"
    android:paddingTop="15dp"
    android:paddingRight="5dp"
    android:paddingLeft="17dp"
    android:layout_width="match_parent"
    android:background="@drawable/xe"
    android:layout_height="match_parent"

    tools:context="com.example.android.canteen.XeroxMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="no. of pages"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="3mm"
        android:layout_marginBottom="16dp"
        android:textAllCaps="true"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="34dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="48dp"
            android:background="#82b1ff"
            android:layout_height="48dp"
            android:onClick="decrement"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="-"

            />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="2"
            android:textSize="3mm"
            android:textColor="@android:color/black"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#82b1ff"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:onClick="increment"
            android:text="+" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="no. of copies"
        android:textSize="3mm"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:textAllCaps="true"
        tools:layout_editor_absoluteY="119dp"
        tools:layout_editor_absoluteX="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="34dp">



        <Button
            android:id="@+id/button"
            android:layout_width="48dp"
            android:background="#82b1ff"
            android:layout_height="48dp"
            android:onClick="decrement1"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="161dp"
            android:text="-" />

        <TextView
            android:id="@+id/quanti_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="1"
            android:textSize="3mm"
            android:textColor="@android:color/black"

            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="172dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="48dp"
            android:background="#82b1ff"
            android:layout_height="48dp"
            android:onClick="increment1"
            android:textSize="30sp"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="161dp"
            android:text="+" />
    </LinearLayout>
    <TextView
        android:id="@+id/order1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:text="-"
        android:textSize="3mm"
        android:textStyle="bold"
        android:textColor="#880e4f"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="266dp" />
    <TextView
        android:id="@+id/order2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:text="-"
        android:textSize="3mm"
        android:textStyle="bold"
        android:textColor="#880e4f"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:text="bill"
        android:textAllCaps="true"
        android:textColor="#880e4f"
        android:textSize="3mm"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/bill_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:text="Rs.2"
        android:textSize="3mm"
        android:textStyle="bold"
        android:textColor="#880e4f"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitOrder"
        android:background="#4db6ac"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="3mm"
        android:text="submit"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="proceed1"
        android:background="#4db6ac"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="3mm"
        android:text="proceed"/>

</LinearLayout>
